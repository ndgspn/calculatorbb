.jumbotron{style: "background-color: '#CFD8DC'"}
  - unless @bmi.nil?
    %center
      %h3 
        Nilai BMI kamu adalah 
        %strong #{@bmi}
      Status berat badan kamu adalah
      %strong
        =raw @status_bb.html_safe
      %br 
      Perkiraan berat ideal 
      %strong minimal
      adalah 
      %strong #{@berat_min} kg
      %br
      Perkiraan berat ideal 
      %strong maximal
      adalah 
      %strong #{@berat_max} kg
      %br
    %p
      %table.table
        %thead
          %tr
            %th BMI
            %th Status Berat Badan
        %tbody
          %tr.warning
            %td Kurang dari 18.5
            %td Kurus / Kekurangan berat badan
          %tr.success
            %td 18.5 - 24.9
            %td Normal (ideal)
          %tr.warning
            %td 25.0 - 29.9
            %td Kelebihan berat badan
          %tr.danger
            %td 30.0 atau lebih
            %td Kegemukan (obesitas)
